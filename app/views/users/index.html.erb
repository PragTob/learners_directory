<h1>List users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Delete</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Delete', user, :confirm => 'Are you sure?', 
                                    :method => :delete %></td>
  </tr>
<% end %>
</table>

